        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Center" 
                 Text="Mon compte sfijqzgdsdhvksjgdsqhcvkgsdhsqjdsd" VerticalAlignment="Center"
                 Grid.Row="0" Grid.ColumnSpan="2"
                 />

        <TextBox x:ConnectionId='2' x:Name="txtNumCompte"
                   Grid.Column="1" Grid.Row="1"
                   Text="{Binding SelectedCompte.NumCompte, Mode=TwoWay}"></TextBox>

        <Button x:ConnectionId='3' x:Name="btnTest2"                       ></Button>
